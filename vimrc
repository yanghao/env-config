set nu
set tabstop=8
set shiftwidth=8
set softtabstop=8
set ruler
set showcmd
syntax on
set autoindent
set nosmartindent
set hlsearch
color evening
set nowrap
set expandtab

autocmd FileType make set noexpandtab
autocmd FileType c set cindent
autocmd FileType c set noexpandtab
autocmd FileType python set nocindent
